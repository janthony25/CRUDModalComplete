@model List<CRUDModal1.Models.Product>


<!-- Modal -->
<div class="modal fade" id="ProductModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalTitle"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <input type="hidden" id="ProductId" asp-for="@Model[0].ProductId" value="0" />
                <div class="mb-2">
                    <label asp-for="@Model[0].ProductName"></label>
                    <input id="ProductName" asp-for="@Model[0].ProductName" class="form-control" />
                </div>
                <div class="mb-2">
                    <label asp-for="@Model[0].Price"></label>
                    <input id="Price" asp-for="@Model[0].Price" class="form-control" />
                </div>
                <div class="mb-2">
                    <label asp-for="@Model[0].Qty"></label>
                    <input id="Qty" asp-for="@Model[0].Qty" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="Save" onclick="Insert();">Save</button>
                <button type="submit" class="btn btn-primary" id="Update" onclick="Update();" style="display:none">Update</button>
                <button type="submit" class="btn btn-danger" id="Delete" onclick="Delete();" style="display:none">Delete</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>